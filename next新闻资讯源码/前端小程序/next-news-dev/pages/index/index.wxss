/* 新闻分类 start */
.types {
  width: 100%;
  white-space: nowrap;
  border-bottom: solid 1px;
  border-bottom-color: rgb(223, 219, 219);
}

.type-item {
  font-size: 18px;
  width: rpx;
  display: inline-block;
  margin: 10rpx 20rpx;
}

.type-red {
  color: #dd6059;
}

.type-none {
}

/* 新闻分类 end */

/* 新闻列表样式 start */
.news {
  padding: 30rpx 30rpx 0rpx 30rpx;
}

.news-title {
  font-size: 20px;
}

.publish {
  display: flex;
  flex-direction: row;
  font-size: 14px;
  color: gray;
  margin-top: 10rpx;
  border-bottom: solid 1px;
  border-bottom-color: rgb(223, 219, 219);
}

.create-time {
  margin-left: 30rpx;
  margin-bottom: 20rpx;
}

.img-set {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.cover {
  width: 220rpx;
  height: 150rpx;
}

.pic-words {
  display: flex;
  flex-direction: row;
}

.title-words {
  width: 500rpx;
}